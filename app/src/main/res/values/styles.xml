<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Primary theme color of the app (sets background color of app bar) -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <!-- Background color of buttons in the app -->
        <item name="colorButtonNormal">@color/colorAccent</item>
    </style>

    <style name="style_score_button">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:layout_marginLeft">@dimen/margin_24</item>
        <item name="android:layout_marginRight">@dimen/margin_24</item>
    </style>
</resources>
